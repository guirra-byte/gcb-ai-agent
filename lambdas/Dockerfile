# ============================================================
# üß± Stage 1 - Builder: instala depend√™ncias isoladamente
# ============================================================
FROM public.ecr.aws/docker/library/python:3.12-slim AS builder

# Copia o bin√°rio do UV (gerenciador de depend√™ncias)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Vari√°veis de ambiente
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    UV_SYSTEM_PYTHON=1

WORKDIR /build

# Instala depend√™ncias de compila√ß√£o apenas temporariamente
RUN apt-get update && apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        libpq-dev \
        build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copia somente os arquivos de depend√™ncia
COPY src/pyproject.toml src/uv.lock ./

# Instala depend√™ncias num diret√≥rio tempor√°rio (melhor pra cache e tamanho)
RUN uv pip install --no-cache --target=/deps .

# ============================================================
# üêç Stage 2 - Final: imagem de produ√ß√£o leve
# ============================================================
FROM public.ecr.aws/docker/library/python:3.12-slim

LABEL maintainer="GCB AI Team" \
      description="GCB AI Agent - Contract Processing with Docling and OpenAI" \
      version="1.0"

# Define Lambda task root (padr√£o AWS Lambda)
ENV LAMBDA_TASK_ROOT=/var/task
WORKDIR ${LAMBDA_TASK_ROOT}

# Vari√°veis de ambiente
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    HOME=/tmp

# Instala apenas libs necess√°rias pro runtime
RUN apt-get update && apt-get install -y --no-install-recommends \
        libmupdf-dev \
        mupdf-tools \
        libgl1 \
        libglib2.0-0 \
        libsm6 \
        libxext6 \
        libxrender1 \
        libgomp1 \
        ca-certificates \
        curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Instala o AWS Lambda Runtime Interface Client
RUN pip install --no-cache-dir awslambdaric

# Instala o AWS Lambda Runtime Interface Emulator (para testes locais)
RUN curl -Lo /usr/local/bin/aws-lambda-rie \
    https://github.com/aws/aws-lambda-runtime-interface-emulator/releases/latest/download/aws-lambda-rie && \
    chmod +x /usr/local/bin/aws-lambda-rie

# Copia depend√™ncias do builder (sem camadas pesadas do sistema)
COPY --from=builder /deps /usr/local/lib/python3.12/site-packages

# Copia apenas o c√≥digo-fonte necess√°rio
COPY src/ ${LAMBDA_TASK_ROOT}/

# Cria diret√≥rios de runtime (Lambda requer diret√≥rios grav√°veis em /tmp)
RUN mkdir -p /tmp/output /tmp/docling_models && \
    chmod -R 777 /tmp/output /tmp/docling_models

# Copia o script de entrada
COPY entry.sh /entry.sh
RUN chmod +x /entry.sh

# ENTRYPOINT usa script que detecta se est√° rodando local ou na AWS
ENTRYPOINT ["/entry.sh"]

# CMD especifica o handler no formato m√≥dulo.fun√ß√£o
CMD ["main.handler"]